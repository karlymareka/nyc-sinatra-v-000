<form action="/figures" method="post">
  <h2>Landmark Name: <input id="name" type="text" name="Name"></h2>
  <h2>Song Artist: <input id="artist" type="text"
      name="Artist Name"></h2>
  <h2>Titles: </h2>
    <% @titles.each do |title| %>
      <h3><%=title.name%><h3>
      <input type="checkbox" name="titles[]" id="<%= title.name %>"
      value="<%= title.name %>"><%= title.name %></input>
    <% end %>
  <h2>Create New Title:<input name="new_title" id="new_title"></h2>

      <h2>Landmarks: </h2>
        <% @landmarks.each do |landmark| %>
          <h3><%=landmark.name%><h3>
          <input type="checkbox" name="landmarks[]" id="<%= landmark.name %>"
          value="<%= landmark.name %>"><%= landmark.name %></input>
        <% end %>
      <h2>Create New Landmark: </h2>
        Name: <input id="new_landmark_name" name="new_landmark_name">
        Year: <input id="new_landmark_year" name="new_landmark_year">

    <input id="Create" type="submit">

</form>
